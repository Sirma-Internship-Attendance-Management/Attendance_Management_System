                                                </Grid>
                                            </Grid>
                                        </Border>

                                        <Button x:Name="btnRedact"
                                        Command="{Binding RedactCommand}"
                                        Margin="0,0,0,0"                           
                                        BorderThickness="0"
                                        Content="Redact Company Information"
                                        Foreground="White"
                                        FontSize="14"
                                        FontFamily="Montserrat"
                                        Cursor="Hand"
                                        Click="btnRedact_Click">        


                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Setter Property="Background" Value="DarkBlue"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#28AEED"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>

                                            <Button.Template>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border Width="350" Height="40"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                                        <ContentPresenter 
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button x:Name="btnCommit" 
                                        Command="{Binding CommitCommand}"
                                        BorderThickness="0"
                                        Content="Commit changes"
                                        Foreground="White"
                                        FontSize="12"
                                        FontFamily="Montserrat"
                                        Cursor="Hand"                           
                                        Margin="0,15,0,0"
                                        Visibility="Collapsed"            
                                        Click="btnCommit_Click">  

                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="DarkBlue"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#28AEED"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>

                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Width="150" Height="40"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                                            <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>

                                            <Button x:Name="btnCancelReadact" 
                                        Command="{Binding CancelRedactCommand}"
                                        BorderThickness="0"
                                        Content="Cancel Readact"
                                        Foreground="White"
                                        FontSize="12"
                                        FontFamily="Montserrat"
                                        Cursor="Hand"                           
                                        Margin="20,15,0,0"
                                        Visibility="Collapsed"            
                                        Click="btnCancelRedact_Click">

                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="DarkBlue"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#28AEED"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>

                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Width="150" Height="40"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                                            <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>

                                        </StackPanel>
                                    </StackPanel>
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Border Grid.Row="0" CornerRadius="10"  Margin="5, 10, 10, 10" Background="Orange"                               
                                BorderThickness="2" 
                                Opacity="0.95">
                                            <Border.BorderBrush>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#462AD8" Offset="0"/>
                                                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                                                    <GradientStop Color="#8A16C1" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.BorderBrush>
                                            <StackPanel Margin="0, 0, 0, 0" HorizontalAlignment="Center" >
                                                <Border CornerRadius="10"  Margin="20, 20, 20, 10"  
                                             Background="OrangeRed"
                                BorderThickness="2" 
                                Opacity="0.95">
                                                    <Border.BorderBrush>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#462AD8" Offset="0"/>
                                                            <GradientStop Color="#DA34AE" Offset="0.75"/>
                                                            <GradientStop Color="#8A16C1" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.BorderBrush>
                                                    <TextBlock Margin="30,10,30,10" Text="Managment"
                               Name="manText"
                               FontSize="25"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               HorizontalAlignment="Center">
                                                        <TextBlock.Foreground>
                                                            <LinearGradientBrush>
                                                                <GradientStop Color="#2af598" Offset="1"/>
                                                                <GradientStop Color="#009efd" Offset="0.3"/>
                                                            </LinearGradientBrush>
                                                        </TextBlock.Foreground>
                                                    </TextBlock>
                                                </Border>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <Button x:Name="btnOpen" 
                            Grid.Column="1"
                            Command="{Binding OpenCommand}"
                            BorderThickness="0"                            
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand" Margin="0,0,0,0" Grid.Row="1">
                                                        <Button.Style>
                                                            <Style TargetType="{x:Type Button}">
                                                                <Setter Property="Background" Value="AntiqueWhite"/>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#28AEED"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Width="100" Height="100"
                                        CornerRadius="20"
                                        BorderThickness="2"
                                        Margin="20, 0, 0, 10"
                                        Background="{TemplateBinding Background}">
                                                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                                                    <Border.BorderBrush>
                                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                            <GradientStop Color="#462AD8" Offset="0"/>
                                                                            <GradientStop Color="#DA34AE" Offset="0.75"/>
                                                                            <GradientStop Color="#8A16C1" Offset="1"/>
                                                                        </LinearGradientBrush>
                                                                    </Border.BorderBrush>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                        <Image Source="Images/Employees.png" Width="100" Height="100" />
                                                    </Button>
                                                    <Button x:Name="btnReports" 
                            Grid.Column="0"
                            Command="{Binding OpenCommand2}"
                            BorderThickness="0"                            
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand" Margin="0,0,0,0"                             
                            Grid.Row="1">
                                                        <Button.Style>
                                                            <Style TargetType="{x:Type Button}">
                                                                <Setter Property="Background" Value="AntiqueWhite"/>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#28AEED"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Width="100" Height="100"
                                        CornerRadius="20"
                                        BorderThickness="2"
                                        Margin="20, 0, 20, 10"
                                        Background="{TemplateBinding Background}">
                                                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                                                    <Border.BorderBrush>
                                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                            <GradientStop Color="#462AD8" Offset="0"/>
                                                                            <GradientStop Color="#DA34AE" Offset="0.75"/>
                                                                            <GradientStop Color="#8A16C1" Offset="1"/>
                                                                        </LinearGradientBrush>
                                                                    </Border.BorderBrush>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                        <Image Source="Images/Reports.png" Width="100" Height="100" />
                                                    </Button>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                        <Border CornerRadius="10" Margin="5, 0, 10, 10" Grid.Row="1" Background="LightGreen"
                                            BorderThickness="2" 
                                Opacity="0.95">
                                            <Border.BorderBrush>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#462AD8" Offset="0"/>
                                                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                                                    <GradientStop Color="#8A16C1" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.BorderBrush>
                                            <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                                <Label FontSize="15"
                                                   FontWeight="Medium"
                                                   FontFamily="Montserrat"
                                                   Content="Current time is:"></Label>
                                                <Label Name="timeLabel" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="15"
                                               FontWeight="Medium"
                                               FontFamily="Montserrat"
                                               Content="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='Today is: {0:dd:MM:yy}'}" />
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Grid>
                            </Border>
                        </materialDesign:TransitioningContent>
                    </Grid>
                    <Grid Grid.Column="0" Grid.Row="1">
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
