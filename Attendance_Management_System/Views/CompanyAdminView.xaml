                                Opacity="0.95" >
                                            <Border.BorderBrush>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#462AD8" Offset="0"/>
                                                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                                                    <GradientStop Color="#8A16C1" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.BorderBrush>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                

                                                    <TextBlock Grid.Row="0" Margin="10,10,10,10" Text="Company Information"
                               
                               FontSize="20"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               HorizontalAlignment="Center">
                                                            <TextBlock.Foreground>
                                                                <LinearGradientBrush>
                                                                <GradientStop Color="#462AD8" Offset="0"/>
                                                                <GradientStop Color="#DA34AE" Offset="0.75"/>
                                                                <GradientStop Color="#8A16C1" Offset="1"/>
                                                            </LinearGradientBrush>
                                                            </TextBlock.Foreground>
                                                        </TextBlock>
                                                <Grid Grid.Row="1" Margin="0, 0, 0, 0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="2*"/>                                                        
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="*"/>                                                        
                                                    </Grid.RowDefinitions>
                                                    <StackPanel Grid.Row="0" Grid.Column="0">
                                                    <Border CornerRadius="10"               
                                                    BorderThickness="2" 
                                                    Opacity="0.95" 
                                                    Background="LightYellow"
                                                    Width="100" Height="100" Margin="0, 5, 0, 5">
                                                        <Border.BorderBrush>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#462AD8" Offset="0"/>
                                                                <GradientStop Color="#DA34AE" Offset="0.75"/>
                                                                <GradientStop Color="#8A16C1" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Border.BorderBrush>
                                                        <Image Source="Images/noLogo.png" Width="100" Height="100">
                                                        </Image>
                                                    </Border>
                                                        <Button x:Name="btnlogoChange" Content="Change Logo" Visibility="Collapsed" Margin="10 0 10 10"
                                                                Foreground="White"
                                                                FontSize="11"
                                                                FontFamily="Montserrat"
                                                                Cursor="Hand"
                                                                Click="btnChangeLogo_Click">
                                                            <Button.Style>
                                                                <Style TargetType="{x:Type Button}">
                                                                    <Setter Property="Background" Value="#462AD8"/>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#28AEED"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>

                                                            <Button.Template>
                                                                <ControlTemplate TargetType="{x:Type Button}">
                                                                    <Border Width="100" Height="20"
                                                                            CornerRadius="5"
                                                                            Background="{TemplateBinding Background}">
                                                                        <ContentPresenter VerticalAlignment="Center"
                                                                                          HorizontalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                    </StackPanel>
                                                    <Grid Grid.Row="0" Grid.Column="1">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="*"/>
                                                            <RowDefinition Height="*"/>
                                                            <RowDefinition Height="*"/>
                                                        </Grid.RowDefinitions>

                                                        <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Content="Company Name:"></Label>
                                                        <Label Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" 
                                                               x:Name="lblCompanyName"
                                                               Content="{Binding CompanyName}"></Label>
                                                        <TextBox Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Width="150" Visibility="Collapsed"
                                                                 x:Name="tbCompanyName"> </TextBox>
                                                        <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Content="Industry Type:"></Label>
                                                        <Label Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" 
                                                               x:Name="lblIndustryType"
                                                               Content="{Binding IndustryType}"></Label>
                                                        <TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Width="auto" Visibility="Collapsed"
                                                                 x:Name="tbIndustryType"></TextBox>
                                                        <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Content="Website:"></Label>
                                                        <Label Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" 
                                                               x:Name="lblWebsite"
                                                               Content="{Binding CompanyWebsite}"></Label>
                                                        <TextBox Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Width="auto" Visibility="Collapsed"
                                                                 x:Name="tbWebsite"></TextBox>
                                                    </Grid>
                                                    <StackPanel Grid.Row="1" Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Label VerticalAlignment="Center" Content="Employees:"></Label>
                                                            <Label VerticalAlignment="Center" HorizontalAlignment="Left" Content=""></Label>
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <Grid Grid.Row="1" Grid.Column="1">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="*"/>
                                                            <RowDefinition Height="*"/>
                                                            <RowDefinition Height="*"/>                                                                                                                      
                                                        </Grid.RowDefinitions>
                                                        <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Content="Address:"></Label>
                                                        <Label Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" 
                                                               x:Name="lblAddress"
                                                               Content="{Binding CompanyAddress}"></Label>
                                                        <TextBox Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Width="193" Visibility="Collapsed"
                                                                 x:Name="tbAddress"></TextBox>                                                        
                                                        
                                                        
                                                    </Grid>
                                                    
                                                
